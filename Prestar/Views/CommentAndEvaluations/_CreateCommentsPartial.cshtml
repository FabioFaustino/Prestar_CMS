@model Prestar.Models.CommentAndEvaluation

@{
   
}
<head>
    <link rel="stylesheet" href="~/css/Comments.css" />
</head>


<div id="write-comment">
    <h4 class="mb-3 text-center">Comente e Avalie!</h4>
    
        <form asp-area="" asp-controller="CommentAndEvaluations" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="ServiceID" class="form-control" value="@ViewBag.ServiceID" type="hidden" />
            <div id="form-div">
                <div class="form-group col-md-10">
                    <textarea asp-for="Comment" rows="3" cols="6" class="form-control" placeholder="Escreva aqui um comentário sobre o serviço ou sobre o prestador..."> </textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <label asp-for="Evaluation" class="control-label"></label>
                    <fieldset class="rating" id="rating">
                        <input asp-for="Evaluation" type="radio" id="star5" value="5" /><label class="full" for="star5" title="5 estrelas"></label>
                        <input asp-for="Evaluation" type="radio" id="star4" value="4" /><label class="full" for="star4" title="4 estrelas"></label>
                        <input asp-for="Evaluation" type="radio" id="star3" value="3" /><label class="full" for="star3" title="3 estrelas"></label>
                        <input asp-for="Evaluation" type="radio" id="star2" value="2" /><label class="full" for="star2" title="2 estrelas"></label>
                        <input asp-for="Evaluation" type="radio" id="star1" value="1" /><label class="full" for="star1" title="1 estrelas"></label>
                    </fieldset>
                    <span asp-validation-for="Evaluation" class="text-danger"></span>
                </div>
            </div>
            

            <input type="submit" value="Comentar e Avaliar" class="btn btn-normal ml-3" id="btn-comment" />
        </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
