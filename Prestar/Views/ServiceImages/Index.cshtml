@model IEnumerable<Prestar.Models.ServiceImage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/Services.css" />
</head>

<div id="title" class="mb-0">
    <h4 class="text-muted">Galeria de imagens do Serviço</h4>
</div>

<p id="add-more-pics">
    <a class="btn btn-normal" id="btn-service" asp-action="Create" asp-route-id="@ViewBag.ServiceID">
        Adicionar Imagens
    </a>
</p>

<div id="services-photos-container" class="mb-5">
    <div id="services-photos">
        @foreach (var item in Model)
        {
            <div class="p-2" style="text-align:center; width:max-content; border: 1px solid #cecece; border-radius:0.4em;">
                <div class="text-right" style="margin-top:-1em;">
                    <a class="delete" aria-label="Close"
                       data-id="@item.ServiceImageID"
                       data-controller="ServiceImages"
                       data-action="RemoveImage"
                       data-body-message="Tem a certeza que pretende eliminar a imagem? Esta ação é irreversivel."
                       style="font-size:35px; text-align:right; color:#808080;">

                        &times;
                    </a>
                </div>
                <div>
                    <img id="Image" style="width:250px;height:250px; object-fit:cover;" src="data:image/*;base64, @(Convert.ToBase64String(item.Image))">
                    <p class="mb-0"><small class="text-muted">Carregada em: @Html.DisplayFor(modelItem => item.CreationDate)</small> </p>
                </div>
            </div>
        }
    </div>
</div>

<a class="btn btn-normal" id="btn-service" asp-controller="Services" asp-action="UserServices" asp-route-pageNumber="1">Voltar Atrás</a>