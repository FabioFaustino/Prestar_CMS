@model Prestar.Models.ServiceCategory

@{
    ViewData["Title"] = "Criar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/Services.css" />
</head>

<div id="title">
    <h4 class="text-muted">Criar Nova Categoria</h4>
</div>
<div class="row" style="justify-content:center!important;">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Illustration" style="width: 100%;"></label>
                <img id="Illustration" style="width:350px; height:350px; object-fit:scale-down" src="~/images/Images-rafiki.png">
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="Illustration"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;background-color: #f3f3f5;"
                       onchange="document.getElementById('Illustration').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Illustration" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Criar" class="btn btn-normal mt-3"  id ="btn-categories" />
                <a class="btn btn-normal mt-3" id ="btn-categories" asp-action="Index">Voltar para Categorias</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
