@model Prestar.Models.Section

@{
    ViewData["Title"] = "Criar Secção";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/Norm_Manual.css" />
</head>

<div id="title">
    <h4 class="text-muted">Criar Secção no Manual</h4>
</div>

<div class="row" style="justify-content:center!important;">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserManualID" value="@ViewBag.UserManualID" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" cols="5" rows="10" class="form-control" style="white-space: pre-wrap;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group" id="service-pic">
                <img id="IllustrationS" style="width:200px;height:200px; object-fit:scale-down" src="~/images/Images-rafiki.png">
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="Illustration"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;background-color:#f3f3f5;"
                       onchange="document.getElementById('IllustrationS').src = window.URL.createObjectURL(this.files[0])" id="Input_SectionPicture" />
                <span asp-validation-for="Illustration" class="text-danger"></span>
            </div>

            <div class="form-group text-center" id="btn-manual">
                <button type="submit" class="btn btn-normal">Criar Secção</button>
                <button class="btn btn-normal" asp-controller="UserManuals" asp-action="Edit" asp-route-id="@ViewBag.UserManualID">Voltar para as Secções</button>
            </div>
        </form>
    </div>
</div>

