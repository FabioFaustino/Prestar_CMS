@model Prestar.Models.ServiceRequisition

@{
    ViewData["Title"] = "Requisitar Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/Services.css" />
</head>

<div id="title">
    <h4 class="mb-0 text-muted">Requisitar Serviço</h4>
</div>
<hr />
<div class="row" style="justify-content:center!important;">
    <div class="col-md-8">

        <div class="form-group col-md-12">
            <label class="control-label">Serviço</label>
            <input class="form-control" type="text" placeholder="@ViewBag.ServiceDescription" readonly>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label">Categoria</label>
            <input class="form-control" type="text" placeholder="@ViewBag.ServiceCategory" readonly>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label">Prestador</label>
            <input class="form-control" type="text" placeholder="@ViewBag.ServiceProvider" readonly>
        </div>

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group col-md-12">
                <label asp-for="AdditionalRequestInfo" class="control-label"></label>
                <textarea asp-for="AdditionalRequestInfo" class="form-control" rows="6" placeholder="Neste campo, poderá colocar informação adicional relativa à requisição do serviço. Por exemplo, para um serviço de Take Away, será útil adicionar informações relativas a alergias."></textarea>
                <span asp-validation-for="AdditionalRequestInfo" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <input id ="btn-service"type="submit" value="Requisitar" class="btn btn-normal mt-3" />
                <a asp-action="Index" class="btn btn-normal mt-3" id ="btn-service">Os Meus Pedidos</a>
            </div>

        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
