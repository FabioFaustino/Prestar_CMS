@page

@model SettingsModel

@{
    ViewData["Title"] = "Configurações";
    ViewData["ActivePage"] = ManageNavPages.Settings;
}

<head>
    <link rel="stylesheet" href="~/css/Perfil.css" />
</head>

<div id="title">
    <h4 id="title-changeAccount">@ViewData["Title"]</h4>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row" id="ChangeAccount-row">
    <div class="col-md-2">
        <partial name="_ManageNav" />
    </div>
    <hr id="line"/>
   
    <div class="text-justify ml-4 w-50" id="config-Notification">

        <p>Para uma melhor experiência na aplicação, recomendamos que deixe todas as opções ativas.</p>
        <div>
            <form id="change-settings-form" method="post">
                <p>Notificações</p>
                @if (Model.ReceiveNotifications())
                {
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="active" checked asp-for="Input.ReceiveNotifications">
                        <label class="custom-control-label w-auto ml-2" for="active">Desativar Notificações</label>
                    </div>
                }
                else
                {
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="desactive" asp-for="Input.ReceiveNotifications">
                        <label class="custom-control-label w-auto ml-2" for="desactive">Ativar Notificações</label>
                    </div>
                }

                <br />
                <p>Email</p>
                @if (Model.ShowEmail())
                {
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="showEmail" checked asp-for="Input.ShowEmail">
                        <label class="custom-control-label w-auto ml-2" for="showEmail">Esconder Email</label>
                    </div>
                }
                else
                {
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="hideEmail" asp-for="Input.ShowEmail">
                        <label class="custom-control-label w-auto ml-2" for="hideEmail">Mostrar Email</label>
                    </div>
                }
                <br />
               <p>Telefone</p>
                @if (Model.ShowPhone())
                {
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="showPhone" checked asp-for="Input.ShowPhoneNumber">
                        <label class="custom-control-label w-auto ml-2" for="showPhone">Esconder Nº Telefone</label>
                    </div>
                }
                else
                {
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="hidePhone" asp-for="Input.ShowPhoneNumber">
                        <label class="custom-control-label w-auto ml-2" for="hidePhone">Mostrar Nº Telefone</label>
                    </div>
                }
                <br />
                <button id="send-request-btn" type="submit" class="btn-normal">Guardar Alterações</button>
            </form>
            <br />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}