@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<head>
    <link rel="stylesheet" href="~/css/Perfil.css" />
</head>

<div id="title">
    <h4 id="title-changeAccount">Alterar Palavra-Passe</h4>
</div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-2">
        <partial name="_ManageNav" />
    </div>
    <hr id="line"/>
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" id="email-div">
                <label asp-for="Input.OldPassword" style="width:20em"></label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group" id="email-div">
                <label asp-for="Input.NewPassword" style="width:20em"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group" id="email-div">
                <label asp-for="Input.ConfirmPassword" style="width:20em"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="btn-change-pwd" type="submit" class="btn-normal">Guardar Alterações</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}