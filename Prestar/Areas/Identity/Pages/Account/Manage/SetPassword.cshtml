@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Definir Palavra-Passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Definir password</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-2">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-6">
        <p class="text-info">
            Não existe uma conta local associada para este site. Registe uma nova conta para que possa entrer sem uma conta externa.
        </p>
        <div class="row">
            <div class="col-md-6">
                <form id="set-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword"></label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Definir</button>
                </form>
            </div>
        </div>
   </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
